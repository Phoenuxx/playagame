<h1>Games!</h1>

<h2>Games backlog:</h2> 
<ul>
  {{#each game}}
    {{#unless played}}
      {{game_name}}
      {{played}}
    {{/unless}}
  {{/each}}
</ul>


<h2>Games you have played:</h2>

<ol>
  {{#each game}}
    {{#if played}}
      {{game_name}}
    {{/if}}
  {{/each}}
</ol>

<h2>Add a Game</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Game Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="played">Played already?</label><br>
    <input type="radio" name="played" value="1" checked> In the Backlog<br>
    <input type="radio" name="played" value="0"> Already Played
  </div>

  <button type="submit">Add Cat</button>
</form>